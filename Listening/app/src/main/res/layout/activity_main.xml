<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFF1F3"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <!--  제목 레이아웃   -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:background="#EFF1F3"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <!-- title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="듣기 평가"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>




    <!--  문제 레이아웃  -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="269dp"
        android:background="#EFF1F3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="363dp"
            android:layout_height="226dp"
            android:background="@drawable/border_radius"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <!--  문제   -->
            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="@string/sound_problem"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />


            <!--  듣기평가 소리버튼  -->
            <ImageView
                android:id="@+id/Listening_evaluation_Button"
                android:layout_width="102dp"
                android:layout_height="83dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/music_and_multimedia" />


        </LinearLayout>
    </RelativeLayout>




    <!-- 입력 and 제출 레이아웃  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/Answer_input"
            android:layout_width="360dp"
            android:layout_height="37dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/border_radius"
            android:hint="   답을 입력하세요."
            android:inputType="text"
            android:textColorHint="#878181" />

        <Button
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:text="제출"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>



  <!-- 뒤로가기 버튼 레이아웃  -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/problem_back"
            android:layout_width="64dp"
            android:layout_height="69dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="intro_back"
            app:srcCompat="@drawable/arrows" />

    </RelativeLayout>

</LinearLayout>